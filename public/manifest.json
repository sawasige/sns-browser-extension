{
  "manifest_version": 3,
  "name": "SNS Follower Manager",
  "version": "1.0.0",
  "description": "Manage followers on Instagram, Twitter, and Threads - find inactive accounts and non-followers",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://instagram.com/*",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://www.threads.net/*",
    "https://threads.net/*"
  ],
  "action": {
    "default_title": "SNS Follower Manager"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
